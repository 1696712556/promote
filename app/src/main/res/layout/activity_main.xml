<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:scrollbars="none">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入底部导航样式"
        tl:layout_constraintEnd_toEndOf="parent"
        tl:layout_constraintHorizontal_bias="0.498"
        tl:layout_constraintStart_toStartOf="parent"
        tl:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入做单导航样式"
        tl:layout_constraintEnd_toEndOf="@+id/button"
        tl:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/main_do_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="做任务界面"
        tl:layout_constraintEnd_toEndOf="@+id/button2"
        tl:layout_constraintStart_toStartOf="@+id/button2"
        tl:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/okhttp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发okhttp请求"
        tl:layout_constraintEnd_toEndOf="@+id/button2"
        tl:layout_constraintHorizontal_bias="0.0"
        tl:layout_constraintStart_toStartOf="@+id/button2"
        tl:layout_constraintTop_toBottomOf="@+id/main_do_button" />

    <Button
        android:id="@+id/main_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录界面"
        tl:layout_constraintEnd_toEndOf="@+id/okhttp_button"
        tl:layout_constraintHorizontal_bias="0.0"
        tl:layout_constraintStart_toStartOf="@+id/okhttp_button"
        tl:layout_constraintTop_toBottomOf="@+id/okhttp_button" />

    <Button
        android:id="@+id/main_home_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="主页"
        tl:layout_constraintEnd_toEndOf="parent"
        tl:layout_constraintStart_toStartOf="parent"
        tl:layout_constraintTop_toBottomOf="@+id/main_login_button" />

    <Button
        android:id="@+id/go_to_image_uploader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="去图片上传"
        tl:layout_constraintEnd_toEndOf="parent"
        tl:layout_constraintStart_toStartOf="parent"
        tl:layout_constraintTop_toBottomOf="@+id/main_home_button" />
</androidx.constraintlayout.widget.ConstraintLayout>